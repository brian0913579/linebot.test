# LINE Bot Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_token
LINE_CHANNEL_SECRET=your_line_secret

# MongoDB Configuration
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/linebot?retryWrites=true&w=majority

# MQTT Broker Settings
MQTT_BROKER=bri4nting.duckdns.org
MQTT_PORT=8883
MQTT_USERNAME=piuser
MQTT_PASSWORD=your_mqtt_password
MQTT_TOPIC=garage/command

# Location Configuration
PARK_LAT=24.79155
PARK_LNG=120.99442
MAX_DIST_KM=0.5

# Timeouts and TTLs
VERIFY_TTL=300
LOCATION_TTL=10

# Application Settings
PORT=8080
VERIFY_URL_BASE=https://bri4nting.duckdns.org/verify-location

# Security Settings
RATE_LIMIT_ENABLED=false
MAX_REQUESTS_PER_MINUTE=30

# Debug Mode Configuration (for testing only)
# Enable debug mode to bypass location verification for specific users
DEBUG_MODE=false
# Comma-separated list of LINE user IDs that can bypass location verification
# Example single user: DEBUG_USER_IDS=U1234567890abcdef
# Example multiple users: DEBUG_USER_IDS=U1234567890abcdef,Uanother_user_id,U999888777
DEBUG_USER_IDS=

# Secrets Backend Configuration
# Options: 'env' (for environment variables) or 'gcp' (for Google Cloud Secret Manager)
SECRETS_BACKEND=env

# Google Cloud settings (only needed if SECRETS_BACKEND=gcp)
GOOGLE_CLOUD_PROJECT=your-project-id
